{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "stylelint.enabled": true,
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "quotes": [2, "single", "avoid-escape"],
        "eqeqeq": 0,
        "brace-style": [2, "1tbs"],
        "eol-last": 0,
        "no-nested-ternary": 1,
        "padded-blocks": [1, "never"],
        "space-before-function-paren": [1, "never"],
        "space-before-blocks": [1, "always"]
    }
}